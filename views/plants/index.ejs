<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Plant Tracker</title>
    <%- include ('../partials/files.ejs') %>
</head>
<body>
    
    <main>
        <div class="container">
            <p><%= user %></p>
            <a href="/user/logout"><button>Logout</button></a>
            <h1>My Plants</h1>
            <a class="add" href="/plants/new">+ Plant</a>

            <ul>
                <% plants.forEach(plant => { %>
                    <li class="list">
                        <a href="/plants/<%=plant._id %>">
                        <%= plant.name %></a>
                        <img src="../../public/images/leaf.png" alt="Leaf">
                    </li>
                <% }) %>
            </ul>

        </div>
    </main>

</body>
</html>